<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg2"
    tools:context=".MainActivity"
    android:id="@+id/mainLayout"
    >

    <ScrollView
        android:id="@+id/sv"
        android:background="@drawable/gb1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="this is a scroll view"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What would you like to watch?"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:fontFamily="@font/lemon1"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/txt1"
            />

            <EditText
                android:drawableStart="@drawable/baseline_search_24"
               android:drawablePadding="8dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_edit"
                android:layout_width="301dp"
                android:layout_height="30dp"
                android:textColor="@color/white"
                android:hint="Search here...."
                android:textColorHint="@color/white"
                android:layout_below="@id/txt1"
                android:layout_centerHorizontal="true"
                android:id="@+id/search"
                />
            <ViewFlipper
                android:id="@+id/vp"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@id/search"
                android:layout_marginStart="2dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                android:autoStart="true"
                android:flipInterval="1000"
                android:inAnimation="@android:anim/slide_in_left"
                android:outAnimation="@android:anim/slide_out_right"
                >
                <ImageView
                    android:layout_width="400dp"
                    android:layout_height="190dp"
                    android:id="@+id/iv1"
                    android:onClick="openPanda"
                    android:src="@drawable/img_23"
                    />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:id="@+id/iv2"
                    android:onClick="openWeb"
                    android:src="@drawable/img_27"
                    />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:id="@+id/iv3"
                    android:onClick="openZilla"
                    android:src="@drawable/img_28"
                    />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:id="@+id/iv4"
                    android:onClick="openMigration"
                    android:src="@drawable/img_29"
                    />

            </ViewFlipper>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Popular movies"
                android:textColor="@color/lightTan"
                android:textSize="18sp"
                android:fontFamily="@font/lemon1"
                android:layout_below="@id/vp"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/txt2"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/txt2"
                android:layout_marginTop="1dp">

            </androidx.recyclerview.widget.RecyclerView>

            <ProgressBar
                android:layout_below="@id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pg1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:visibility="gone"
                />
            <ProgressBar
                android:layout_below="@id/txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pg2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:visibility="gone"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latest movies"
                android:textColor="@color/lightTan"
                android:textSize="18sp"
                android:fontFamily="@font/lemon1"
                android:layout_below="@id/rv1"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/txt3"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/txt3"
                android:layout_marginBottom="35dp"
                >
            </androidx.recyclerview.widget.RecyclerView>

            <FrameLayout
                android:id="@+id/shawFrame"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </RelativeLayout>
    </ScrollView>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
       android:layout_alignParentBottom="true"
        android:layout_marginTop="197dp"
        android:layout_marginBottom="5dp"
        >

        <com.google.android.material.bottomappbar.BottomAppBar
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/lightTan"

            >
        </com.google.android.material.bottomappbar.BottomAppBar>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="200dp"
        >
        <com.google.android.material.bottomappbar.BottomAppBar
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:backgroundTint="@color/bg2"
            android:layout_marginTop="20dp"
            >
        </com.google.android.material.bottomappbar.BottomAppBar>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_centerHorizontal="true"
        style="@style/Floating"
        android:onClick="show"
        />

</RelativeLayout>