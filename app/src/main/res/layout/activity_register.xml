<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg2"
    tools:context=".RegisterActivity">
    <ImageView
        android:id="@+id/img1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/baseline_arrow_back_24"
        android:background="@color/main_background"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:onClick="prev"
        />
<TextView
    android:id="@+id/txt1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Registration"
    android:textColor="@color/lightTan"
    android:layout_centerHorizontal="true"
    android:textSize="30dp"
    android:fontFamily="@font/lemon1"
    android:layout_marginTop="80dp"
    />
    <EditText
        android:background="@drawable/btng"
        android:id="@+id/ed1"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_below="@id/txt1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:drawableLeft="@drawable/baseline_perm_identity_24"
        android:hint="username"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="25dp"

        />

    <EditText
        android:background="@drawable/btng"
        android:id="@+id/ed2"
        android:inputType="textPassword"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_below="@id/ed1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:drawableLeft="@drawable/baseline_key_24"
        android:hint="password"
        android:paddingLeft="20dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="25dp" />
    <EditText
        android:background="@drawable/btng"
        android:id="@+id/ed3"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:inputType="textPassword"
        android:layout_below="@id/ed2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:drawableLeft="@drawable/baseline_key_24"
        android:hint="confirm password"
        android:paddingLeft="20dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="25dp" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn"
        android:layout_width="300dp"
        android:background="@drawable/btng"
        android:layout_height="wrap_content"
        android:layout_below="@id/ed3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:onClick="main"
        android:fontFamily="@font/lemon3"
        android:text="Register"
        android:textColor="@color/white"
        android:textSize="20dp" />
</RelativeLayout>